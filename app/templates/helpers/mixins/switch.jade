mixin switch(id, items, options)
    - options = options || {};
    - options.mod = options.mod || '';
    - if (!id) id = shortid.generate();
    .switch&attributes(attributes)
        each item in items
            .switch__item
                +switch-item(item.mod || options.mod, id, item.id, item.label, item.isActive)

mixin switch-item(mod, group, name, label, isActive)
    - var id = [group, name].join('-');
    .switch-item(class = mod ? 'switch-item' + mod : '')
            input.switch-item__input(
            type = 'radio',
            id = id,
            name = group,
            value = name,
            checked = !!isActive
        )
        label.switch-item__label(
            class = mod ? 'switch-item__label' + mod : '',
            for = id
        )
            span.switch-item__label-text(
                class=mod ? 'switch-label#{mod}' : ''
            )= label
