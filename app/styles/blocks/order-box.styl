$block = '.order-box'

{$block}
    background #fff

    margin-bottom 30px

    &__header
        line-height 50px

        &_normal
            position relative
            padding 10px 0 0
            margin 0 30px

            font-size 22px

            border-bottom 2px solid lighten($grey, 20)
        &_black
            font-size 14px
            line-height 50px

            background $black
            color #fff

            border none

            clearfix()

    &__header-content
        padding 0 30px



    &__header-link
        vertical-align middle

        font-size 14px

        color $grey
    &__header-select
        margin-top -8px

        display inline-block
        width auto

    &__body
        padding 30px
    &__subtotal
        padding 10px 0

        font-weight bold
        font-size 18px

        &_big
            font-size 22px
    &__bottom
        padding 30px

        text-align right

        border-top 1px solid lighten($grey, 20)

        &_left
            text-align left
    &__order-button
        padding-top 5px

    &__fast-order
        padding 20px 100px
.order-box-delivery
    cf()
    &__type
        column(3/5)
    &__address
        column(2/5)
