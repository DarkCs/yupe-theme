$b = '.product-vertical'

{$b}
    position relative

    background #f8f8f8
    background-clip padding-box
    border 3px solid rgba(0, 0, 0, 0)

    text-align center

    &__label
        position absolute
        top 13px
        right 13px

        z-index 1

        pointer-events none

    &__thumbnail
        position relative

        display block
        overflow hidden
        width 100%
        height 308px

        background #fff

    &__img
        position absolute
        top 0
        left 0
        bottom 0
        right 0

        margin auto

        max-width 100%
        max-height 100%

    &__content
        padding 15px
        min-height 110px

    &__title
        display block
        padding-bottom 10px

        color $active-link-color

        font-size 15px
        text-decoration underline

        &:hover
            text-decoration none

    &_hover
    &:hover
        border 3px solid $active-link-color

        {$b}__extra
            display block

    &__price
        position absolute
        bottom 20px
        left 50%
        transform translateX(-50%)

        font-size 1.4em

        white-space nowrap

    &__extra
        position absolute
        top 100%
        left -3px
        right -3px
        z-index 100

        display none
        border 3px solid $active-link-color
        border-top none

        background inherit

.product-vertical-extra
    font-size 13px
    text-align left

    &__top
        margin 0 15px 0 15px
        padding 14px 0

        border-top 1px solid #dbdbdb


    &__rating
        margin-right 10px

        display inline-block

    &__reviews
        display inline-block
        text-decoration underline
        &:hover
            color $active-link-color

    &__stock
        float right

        display inline-block

    &__toolbar
        padding 12px

        background #e7e7e7

    &__button
        margin-right 4px

        display inline-block
        width 41px
        height 41px

        border 1px solid #cbcbcb
        color $grey

        line-height 41px
        text-align center
        font-size 20px

        cursor pointer

        .fa
            width 100%


    &__cart
        float right
