$block = '.toolbar-button'

{$block}
    position relative
    padding-left 10px
    padding-right 10px

    display inline-block

    color #fff

    &:hover
    &_active
        color $active-link-color
        cursor pointer

    &__label
        display inline-block
        line-height initial

    &_dropdown
        padding-right 20px
        &:after
            position absolute
            padding-left 6px
            width 12px
            height 12px
            top calc(50% - 5px)
            
            background url(../images/icon-arrow_down.png) no-repeat center
            content ''

        &:hover
            > .dropdown-menu
                display block

    .fa
        color $grey

    &:hover
        .fa
            color inherit
