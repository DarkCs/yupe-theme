$block = '.rating'

{$block}
    display inline-block

    padding 0 4px

    box-shadow inset 0 0 0 1px #e4e4e4
    color #e4e4e4

    &_1
        box-shadow inset 0 0 0 1px #e35b40
        color $black
    &_2
        box-shadow inset 0 0 0 1px #e98f1a
        color $black
    &_3
        box-shadow inset 0 0 0 1px #e4d100
        color $black
    &_4
        box-shadow inset 0 0 0 1px #b2ca0c
        color $black
    &_5
        box-shadow inset 0 0 0 1px #93cd22
        color $black
