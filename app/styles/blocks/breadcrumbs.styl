.breadcrumbs
    color $grey

    ul
        li
            position relative

            padding-right 30px

            display inline

            &:after
                position absolute
                right 10px
                top calc(50% - 6px)

                display block
                width 12px
                height 12px

                background url(../images/icon-arrow-small_right.png) no-repeat center center

                content ""

            &:last-child
                &:after
                    display none

            a:hover
                color $active-link-color
