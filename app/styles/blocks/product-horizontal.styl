$b = '.product-horizontal'

{$b}
    position relative

    padding 3px

    display table
    width 100%

    background #fff
    background-clip padding-box

    text-align left

    &__label
        position absolute
        top 13px
        left 13px

        z-index 1

        pointer-events none

    &__thumbnail
        position relative

        padding 3px

        display table-cell
        overflow hidden
        width 135px
        height 135px

    &__img
        position absolute
        top 0
        left 0
        bottom 0
        right 0

        margin auto

        max-width 100%
        max-height 100%

    &__content
        display table-cell

        padding 15px
        vertical-align top

    &__title
        display block
        padding-bottom 10px

        color $active-link-color

        font-size 15px
        text-decoration underline

        &:hover
            text-decoration none

    &_hover
    &:hover
        box-shadow inset 0 0 0 3px $active-link-color

    &__price
        //
    &__extra
        //

    &__content-row
        display table
        width 100%

    &__column-title
        display table-cell
    &__column-price
        display table-cell
        width 180px
        vertical-align middle
    &__column-cart
        display table-cell
        width 130px
        vertical-align middle

    &__stock
        padding 10px

        text-align center

{$b}-extra
    display table

    &__item
        display table-cell

        padding 0 10px 0 0

        &_button
            padding-left 15px

            &:hover
                color $active-link-color
            &_active
                color $light-green
        &_reviews
            text-decoration underline
