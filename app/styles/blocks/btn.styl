.btn
	position relative
	display inline-block
	padding 12px 22px
	color inherit
	font-family $heading-fonts
	font-size 14px
	font-weight 700
	line-height 1
	text-align center
	text-decoration none
	white-space nowrap
	background transparent
	border none
	border-radius 0
	box-shadow inset 0 0 0 1px $active-link-color
	cursor pointer
	vertical-align baseline
	user-select none

	&:not(:disabled):not(&_disabled):hover
		background-color $active-link-color

	&:disabled
	&_disabled
		color $grey
		box-shadow inset 0 0 0 3px $light-grey
		cursor default

	&_light
		font-weight 400

	&_info
		padding 4px 12px
		width 29px
		height 29px
		color #fff
		background-color $rushina-blue
		background-image $info-gradient
		border none
		border-radius 100em
		box-shadow inset 0 1px 0 #fff, inset 0 -2px 0 #003e77

		&:not(:disabled):not(&_disabled):hover
			background-color $rushina-blue

		&:hover
		&:active
			background-image none

		&:active
			box-shadow inset 0 2px 0 #003e77, 0 1px 0 #fff

	&_info:disabled
	&_info&_disabled
		background-color $light-grey
		background-image none
		box-shadow inset 0 1px 0 #fff, inset 0 -2px 0 $grey

	&_primary
		color #000
		text-shadow 0 1px 0 rgba(255,255,255,.75)
		text-transform uppercase
		background-color $rushina-yellow
		background-image $primary-gradient
		border none
		box-shadow inset 0 1px 0 #fff, inset 0 -2px 0 #9c7b01

		&:hover
		&:active
			background-image none

		&:active
			box-shadow inset 0 2px 0 #9c7b01, 0 1px 0 #fff

	&_primary:disabled
	&_primary&_disabled
		background-color $light-grey
		background-image none
		box-shadow inset 0 1px 0 #fff, inset 0 -2px 0 $grey

	&_upcase
		text-transform uppercase

	&_wide
		width 100%
		padding-left 12px
		padding-right 12px

	&_bycar:disabled
		box-shadow inset 0 0 0 3px $rushina-yellow
		background-image $primary-gradient
		background-color $rushina-yellow

	&__icon
		margin-right .3em
		width 1em
		height 1em
		vertical-align middle

		&_info
			width 100%
			height 100%
			fill currentColor
			filter drop-shadow(0 -1px 0 rgba(0,0,0,.5));

	&__label
		line-height 1
		vertical-align middle

	&_black
		color black

