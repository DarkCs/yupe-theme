.btn
    position relative
    display inline-block
    padding 12px 22px
    color inherit
    font-family $heading-fonts
    font-size 14px
    line-height 1
    text-align center
    text-decoration none
    white-space nowrap
    background transparent
    border none
    border-radius 0
    box-shadow inset 0 0 0 1px $button-primary-color
    cursor pointer
    vertical-align baseline
    user-select none

    &:active
        background-color $button-success-color !important
        box-shadow inset 0 0 0 1px darken($button-success-color, 5)

    &:not(:disabled):not(&_disabled):hover
        background-color darken($button-primary-color, 5)

    &:disabled
    &_disabled
        color $grey
        box-shadow inset 0 0 0 1px $light-grey
        cursor default

    &__label
        line-height 1
        vertical-align middle

    &_cart
        padding 0 0 0 40px

        width 136px
        height 41px

        line-height @height

        color #fff
        background $button-primary-color url(../images/icon-cart_white.png) no-repeat 20px center

        cursor pointer

        &:hover
            background-color lighten($button-primary-color, 5)

    &_success
        background-color $button-success-color
        box-shadow inset 0 0 0 1px $button-success-color
