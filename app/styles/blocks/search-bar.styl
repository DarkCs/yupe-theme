.search-bar
    &__wrapper
        height 60px

        background-color $active-link-color
    &__catalog-button
        position relative

        padding-left 50px

        display block
        float left
        width 180px

        line-height 60px

        background url(../images/icon-menu.png) no-repeat 20px center
        background-color inherit
        color #fff

        &:hover
            background-color #2e2e2e
    &__input
        padding-left 40px
        padding-right 10px

        width calc(100% - 180px)
        height 60px
        float right

        border 3px solid $active-link-color
        box-sizing border-box
        background #fff url('../images/icon-search.png') no-repeat 10px center

    clearfix()
