.wysiwyg
	clearfix()

	for i in 1..6
		h{i}
			@extend .h{i}
			margin-top 1em
			margin-bottom .5em
			text-transform uppercase

	ul
	ol
		margin-bottom 20px
		list-style-position inside

	ul
		list-style-type disc

	ol
		list-style-type decimal

	em
	i
		font-style italic

	strong
	b
		font-weight 700

	a
		color $active-link-color
		text-decoration underline

	strike
	s
		text-decoration line-through

	u
		text-decoration underline

	sup
		font-size smaller
		vertical-align super

	sub
		font-size smaller
		vertical-align sub

	img ~ *
		margin-left 400px

	img
		margin-left 0
		width 100%
		max-width 380px
		float left

	p
		margin-top .75em
		margin-bottom .75em

	li
		img
			display block
			margin-bottom 20px
			float none

	blockquote
		margin-bottom 40px
		padding 20px 30px 30px
		background $light-grey

		&::before
			@extend .h3
			content 'Важно'
			display block
			padding-top .25em
			padding-bottom .75em
			padding-left 1.8em
			background-image url('../images/svg/1_logo_attention.svg')
			background-position left .25em
			background-repeat no-repeat
			background-size 1.5em
			text-transform uppercase

	table.grid
		table-layout fixed
		margin-bottom 20px

		td
			padding-right 20px
			vertical-align top

	table:not(.grid)
		width 100%

		thead
			color #000
			font-weight 700
			background-color $active-link-color

			tr
				&:not(:only-child)
					border-bottom 3px solid white

				&:last-child
					border-bottom none

				&:not(:first-child)
					th
						padding-top .85em
						padding-bottom .85em

		tbody
			&:not(:first-of-type)
				border-top 3px solid #b0b0b0

			&:last-child
				border-bottom 3px solid #b0b0b0

		tr
			border-bottom 1px solid #b0b0b0

		th
		td
			padding 1.5em 1em
			text-align center

		th
		td
			&:not(:only-child):first-child
				padding-left 2em
				font-weight 700
				text-align left

				&.sub
					padding-left 4em
					font-weight 400

	button
		position relative
		display inline-block
		padding 12px 22px
		color inherit
		font-family $heading-fonts
		font-size 14px
		font-weight 700
		line-height 1
		text-align center
		text-decoration none
		white-space nowrap
		background transparent
		border none
		border-radius 3px
		box-shadow inset 0 0 0 3px $active-link-color
		cursor pointer
		vertical-align baseline
		user-select none

		&:hover
			background-color $active-link-color
			color #000

		&.primary
			color #000
			text-shadow 0 1px 0 rgba(255,255,255,.75)
			text-transform uppercase
			background-color $active-link-color
			border none
			box-shadow inset 0 1px 0 #fff, inset 0 -2px 0 #9c7b01

			&:hover
			&:active
				background-image none

			&:active
				box-shadow inset 0 2px 0 #9c7b01, 0 1px 0 #fff

	p&__lead
		margin-bottom 30px
		font-size 1.2em
