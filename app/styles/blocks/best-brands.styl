.best-brands
    position relative

    padding 10px 0 0

    min-height 50px

    text-align center

    border 1px solid #d2d2d2
    background $background-color

    &__title
        position absolute
        left 50%
        top 0
        transform translate(-50%, -50%)

        padding 0 30px

        background $background-color


    &__item
        display inline-block

        height 100px
        line-height  @height

        text-align center

    &__img
        vertical-align middle
