$block = '.cart'

{$block}
    &-mini
        position absolute
        right 0
        top 100%

        z-index 200

        display none
        min-width 300px
        max-width 300px

        background #fff
        box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.2);

        font-size 14px
        font-weight normal
        text-align left

        &.toggle-active
        &.active
        &_active
            display block

        &__item
            position relative

            padding 25px 0
            margin 0 25px

            border-bottom 1px solid $background-color

            clearfix()

        &__thumbnail
            position relative

            float left
            display block
            width 50px
            height 50px

            overflow hidden

        &__img
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)

            max-width 100%
            max-height 100%

        &__info
            position absolute
            top 50%
            transform translateY(-50%)

            margin-left 50px
            padding 10px

        &__link
            color $active-link-color

        &__bottom
            padding 25px

            text-align center
