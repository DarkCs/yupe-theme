$block = '.dropdown-menu'

{$block}
    position absolute
    left -30px
    width calc(100% + 60px)
    padding 20px 20px 15px 20px
    z-index 10

    display none
    background #fff
    box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.2);
    color #000
    cursor default

    line-height initial

    &__header
        padding 0 0 10px 0

        color #000
    &__item
        line-height initial
        cursor pointer

    &__link
        padding 3px 0

        color $active-link-color
        text-decoration underline
        &_exit
            color #000

        &:hover
            color lighten($active-link-color, 20)

    &__separator
        margin 10px 0
        border-bottom 1px solid #eee

    &_active
        display block

    &:before
        position absolute
        top -20px
        left calc(50% - 5px)

        border 10px solid
        border-color transparent transparent #fff transparent

        content ''
