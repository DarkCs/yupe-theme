.h-slider
    position relative

    &__buttons
        clearfix()
        margin-bottom 30px

        .btn
            margin-right 10px
            float right
            background-color transparent
            box-shadow inset 0 0 0 1px $grey

            &.slick-disabled
                box-shadow none
                opacity .27
                cursor default

                &:hover
                    background-color transparent
            &:hover
                background-color lighten($background-color, 1) !important

        .btn:first-child
            margin-right 0

    &__buttons_noclip
        position absolute
        top -57px
        right 0
        margin-bottom 0

    &__next
        height 34px
        width 34px
        padding 0
        background-image url('../images/svg/h-slider__next.svg')
        background-size contain

    &__prev
        height 34px
        width 34px
        padding 0
        background-image url('../images/svg/h-slider__prev.svg')
        background-size contain

        &.btn
            margin-right -1px

    &__slides
        margin 0 -10px
        margin-bottom -4px
        font-size 0

    &__slide
        display inline-block
        margin 0 10px
        margin-bottom 6px
        font-size 14px

.h2 + .h-slider
    margin-top 30px

.h3 + .h-slider
    margin-top 26px
