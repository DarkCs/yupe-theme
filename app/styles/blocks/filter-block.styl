$block = '.filter-block'

{$block}
    padding 0 22px

    border-bottom 1px solid lighten($grey, 20)

    &__title
        padding 19px 0

        &[data-collapse-summary]

            background url(../images/icon-arrow-small_down.png) no-repeat 0 center

            &.open
                background url(../images/icon-arrow-small_up.png) no-repeat 0 center

            a
                padding-left 25px
                display block
    &__body
        padding-bottom 18px

    &__list-item
        padding 4px 0

        display block

        font-size 13px

        user-select none

        input
            vertical-align middle

        label
            cursor pointer

    &__list
        &_column
            &_2
                {$block}__list-item
                    float left

                    display inline-block
                    width 50%
        clearfix()

    &__range
        .filter-input
            position relative

            display inline-block
            width 100%

            &_range
                margin-left 8%

                width 46%
                &:before
                    line-height 26px
                    position absolute
                    z-index 1
                    top 1px
                    left 1px
                    width 24px
                    content attr(sign-title)
                    text-align center
                    color #666
                    background #fff
            &__box
                display  block

                background #fff
                box-shadow inset 0 0 0 1px $grey

                cursor text
            &__control
                position  relative
                z-index 3

                padding .4em 0
                padding-left 26px

                box-sizing border-box
                width 100%

                background none
                border none

            &:first-child
                margin-left 0
