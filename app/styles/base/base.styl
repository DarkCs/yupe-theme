body
    min-width 1200px
    color #757575
    font-family $text-fonts
    font-size 14px
    line-height 20px

a
    color inherit
    text-decoration none

$h
    font-family $heading-fonts
    color #000

.h1
    @extend $h
    font-size 32px
    line-height 40px

.h2
    @extend $h
    font-size 26px
    line-height 40px

.h3
    @extend $h
    font-size 20px
    line-height 30px

.h4
    @extend $h
    font-size 16px
    line-height 20px

.h5
    @extend $h
    font-size 14px

.h6
    @extend $h

.h_upcase
    text-transform uppercase
